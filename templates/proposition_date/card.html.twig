<div class="calendar-card {% if double is defined %} calendar-card--double__{{ double }} {% endif %}">
    {% if double is defined and double is same as 'right'  %}
        <div class="date-separator">â†’</div>
    {% endif %}
    <div class="calendar-card__top">{{ date|format_datetime(pattern="EEEE") }}</div>
    <div class="calendar-card__body">
        <div class="calendar-card__body__day">
            {{ date|date("d") }}
        </div>
        <div class="calendar-card__body__month">{{ date|format_datetime(pattern="MMMM") }}</div>
        <div class="calendar-card__body__hour">{{ date|date("H:i") }}{% if endingHour is defined %} - {{ endingHour }}{% endif %}</div>

    </div>
</div>




