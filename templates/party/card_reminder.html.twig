<a
        href="{{ path('party_show', {slug: party.slug}) }}"
        class="
            party__reminder__card
            {% if party.creator is same as user %}party__reminder__card--success{% endif %}"
>
    <div class="party__reminder__card__section">
        <div class="party__reminder__card__section--left">{{ party.name }}</div>
        <div class="party__reminder__card__section--right">
{#            <div class="party__reminder__card__section__detail">{{ party.location.city }}</div>#}
{#            <div class="party__reminder__card__section__detail">Lundi 12 février 20h00</div>#}
            </div><div class="calendar-mini">
                <div class="calendar-mini-card calendar-mini-card">
                    <div class="calendar-mini-card__top">{{ party.propositionDates[0].startingAt|format_datetime(pattern="EEEE") }}</div>
                    <div class="calendar-mini-card__body">
                        <div class="calendar-mini-card__body__day">
                            {{ party.propositionDates[0].startingAt|format_datetime(pattern="dd") }}
                        </div>
                        <div class="calendar-mini-card__body__month">{{ party.propositionDates[0].startingAt|format_datetime(pattern="MMMM") }}</div>
                        <div class="calendar-mini-card__body__hour">{{ party.propositionDates[0].startingAt|format_datetime(pattern="hh:mm") }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</a>