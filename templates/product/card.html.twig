<div class="card form__section">
    <div class="card__section">
        <img
                class="table__image"
                src="{% if product.product.picture is defined and product.product.picture is not null %}{{ asset('uploads/'~product.product.picture) }}{% endif %}"
                alt="{{ product.product.name }} "
                width="50px"
                height="50px"
        >

        <div class="card__section--right">
            <p>{{ product.quantity }} {{ product.product.unity.name }}</p>
        </div>
    </div>
    <div class="card__section">
        <h3>{{ product.product.name }}</h3>
    </div>
</div>