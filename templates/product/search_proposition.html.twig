<table class="table table-striped">
    <tbody>
    {% for product in products %}
        <tr id="search-product-{{ product.id }}">
            <th scope="row">{{ product.name }}</th>
            <td>
                <img
                        class="table__image"
                        src="{% if product.picture is defined and product.picture is not null %}{{ asset('uploads/'~product.picture) }}{% endif %}"
                        alt="{{ product.name }} "
                        width="50px"
                        height="50px"
                >
            </td>
            <td>
                <button id="remove-product-{{ product.id }}" type="button" data-product-id="{{ product.id }}">-</button>
                <p><span id="nb-product-{{ product.id }}">0</span> {{ product.shortname }}</p>
                <button id="add-product-{{ product.id }}" type="button" data-product-id="{{ product.id }}">+</button>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>