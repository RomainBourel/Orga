{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{{ 'reset.pwd.request.title'|trans }}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>{{ 'reset.pwd.request.title'|trans }}</h1>
    <div class="form">
        {{ form_start(requestForm, {'attr': {'class': 'form'}}) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                {{ 'reset.pwd.request.text'|trans }}
            </small>
        </div>
        <button class="btn btn-primary">{{ 'button.send.mail'|trans }}</button>

        {{ form_end(requestForm) }}
    </div>

{% endblock %}
