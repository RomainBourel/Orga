{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('password_checker') }}
{% endblock %}

{% block title %}connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.message|trans }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label class="form-label required" for="username">Email:</label>
        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}">

        <label class="form-label required" for="password">Password:</label>
        <div>
            <input type="password" id="password" class="form-control" name="_password">
        </div>
        {# If you want to control the URL the user is redirected to on success
       <input type="hidden" name="_target_path" value="/account"> #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit" class="btn btn-success">{{ 'button.connection'|trans}}</button>
    </form>
    <a href="{{ path('app_register') }}" class="btn btn-primary">{{ 'button.register'|trans }}</a>
    <a href="{{ path('app_forgot_password_request') }}" class="btn btn-secondary">{{ 'reset.pwd.button'|trans }}</a>
{% endblock %}